generator client {
  provider = "prisma-client-js"
}

generator dbml {
  provider = "prisma-dbml-generator"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              String    @id @default(cuid())
  email           String    @unique
  password        String
  phone           String?
  address         String?
  name            String
  createAt        DateTime  @default(now())
  updateAt        DateTime? @updatedAt
  confirmPassword String?

  // reviews         Review[]
  hotels Hotel[] 

  @@map("users")
}

model Hotel {
  id              String    @id @default(cuid())
  name            String
  address         String
  createAt        DateTime  @default(now())
  updateAt        DateTime? @updatedAt
  evaluate        String?
  price           String 
  description     String
  images          String
  image_two       String?
  image_three     String?
  image_four      String?


  users  User     @relation(fields: [userId], references: [id])
  userId          String
  // reviews         Review[]

  @@map("hotels")
}


model Review {
  id              String    @id @default(cuid())
  message         String
  createAt        DateTime  @default(now())
  updateAt        DateTime? @updatedAt
  userId          String
  // users           User      @relation(fields: [userId], references: [id])
  // hotelId         String
  // hotels          Hotel     @relation(fields: [hotelId], references: [id])

  @@map("reviews")
}
